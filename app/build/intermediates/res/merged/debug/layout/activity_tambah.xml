<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_empat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme.AppBarOverlay" />

    <TextView
        android:id="@+id/txtIndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/indonesia"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/addIndo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType=""
        android:textColor="@android:color/black"
        app:ignore="LabelFor">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txtJawa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jawa"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/addJawa"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType=""
        android:textColor="@android:color/black"
        app:ignore="LabelFor" />

    <Button
        android:id="@+id/bSimpan"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@android:drawable/ic_menu_save"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/simpan"
        android:textStyle="bold"
        app:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/txtDftar"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:text="Daftar Kosakata :"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtPetunjuk"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:text="untuk mengedit data tekan terus salah satu kosakata di bawah"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="355dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        app:listitem="@layout/item_custom_listview">

    </ListView>

</LinearLayout>
